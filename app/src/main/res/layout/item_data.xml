<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:layout_marginBottom="24.7dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="80.3dp"
        android:layout_height="80.3dp"
        android:src="@drawable/barber"
        android:scaleType="fitXY"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#394556"
                    android:letterSpacing="0.03"
                    android:text="Cut My Hair"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sub_title"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.7sp"
                        android:letterSpacing="0.03"
                        android:textColor="#6c7581"
                        android:text="Maxima Barbershop"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#6c7581"
                    android:text="01/01/2024"/>

            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layerType="software" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edit"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:letterSpacing="0.03"
                android:textColor="@color/purple"
                android:textSize="13.3sp"
                android:text="@string/edit"
                android:stateListAnimator="@null"
                style="?android:attr/buttonBarButtonStyle" />
            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:stateListAnimator="@null"
                android:letterSpacing="0.03"
                android:textColor="@color/purple"
                android:textSize="13.3sp"
                android:text="@string/delete"
                style="?android:attr/buttonBarButtonStyle" />




        </LinearLayout>

    </LinearLayout>

</LinearLayout>
